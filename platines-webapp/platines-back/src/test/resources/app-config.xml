<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="propertyConfigurer"
		class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
		<property name="locations">
			<list>
				<value>classpath:/configuration.properties</value>
			</list>
		</property>
	</bean>
	<import resource="db-config.xml" />
	<import resource="service-config.xml"  />
	<import resource="mvc-config.xml" />
	<import resource="websocket-config.xml" />
	<import resource="security-config.xml" />
	<import resource="acl-security-config.xml" />
	
	<context:component-scan base-package="fr.asipsante.platines">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Repository"/>
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Service"/>
		<context:include-filter type="annotation" expression="org.springframework.web.bind.annotation.RestController"/>
		<context:include-filter type="regex" expression="fr\.asipsante\.platines\.service\.authentication\.MyUserDetails\.*"/>
		<context:exclude-filter type="annotation" expression="org.springframework.web.socket.config.annotation.EnableWebSocketMessageBroker"/>
		<context:exclude-filter type="regex" expression="fr\.asipsante\.platines\.config\.InfrastructureConfig.*"/>
		<context:exclude-filter type="regex" expression="fr\.asipsante\.platines\.config\.WebSocketConfig.*"/>
		<context:exclude-filter type="regex" expression="fr\.asipsante\.platines\.config\.AclSecurityConfig\.*"/>
		<context:exclude-filter type="regex" expression="fr\.asipsante\.platines\.config\.SecurityConfig.*"/>
		<context:exclude-filter type="annotation" expression="org.springframework.context.annotation.Import"/>		
	</context:component-scan>

</beans>


