<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
    http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-5.7.xsd">
     
    
    <http auto-config="true" >
        <intercept-url pattern="/insecure/**" access="permitAll or hasRole('admin')" />
        <intercept-url pattern="/**" access="permitAll" />
        <intercept-url pattern="/session/**" access="permitAll" />
        <intercept-url pattern="/secure/**" access="authenticated" />
        
    </http>
    <beans:bean class="fr.asipsante.platines.testutils.AclJdbcConfigOverride"></beans:bean>
</beans:beans>
