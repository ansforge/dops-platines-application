<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

	<changeSet author="aboittiaux"
		id="createTableROperationExpected">
		<createTable tableName="r_operation_expected">
			<column name="id" type="BIGINT">
				<constraints nullable="false" />
			</column>
			<column name="RCASE_ID" type="BIGINT" />
		</createTable>
		<modifySql dbms="mysql">
			<append value="ENGINE=INNODB DEFAULT CHARSET=UTF8" />
		</modifySql>
	</changeSet>
	
	<changeSet author="aboittiaux"
		id="ajoutDeLaClePrimaireROperationExpected">
		<addPrimaryKey columnNames="id"
			tableName="r_operation_expected" />
	</changeSet>

	<changeSet author="aboittiaux" id="ajoutConstraintSessionTstIdTableROperationExpected">
		<addForeignKeyConstraint
			baseColumnNames="RCASE_ID" baseTableName="r_operation_expected"
			constraintName="constraintSessionTstIdTableROperationExpected"
			onDelete="RESTRICT" onUpdate="RESTRICT" referencedColumnNames="id"
			referencedTableName="r_case" />
	</changeSet>
	<changeSet author="aboittiaux" id="ajoutConstraintIdTableROperationExpected">
		<addForeignKeyConstraint
			baseColumnNames="id" baseTableName="r_operation_expected"
			constraintName="constraintIdTableROperationExpected" referencedColumnNames="id"
			referencedTableName="r_server_operation_history" />
	</changeSet>
</databaseChangeLog>